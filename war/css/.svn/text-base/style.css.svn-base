body {
	background-color: #FFF;
	margin: 0px;
	padding: 0px;
	width: 100%;
	text-align:center; /* hack para o IE */ 
}

#global_container {
	width: 1024px;
	margin:0 auto;          
	text-align:left; /* "remédio" para o hack do IE */  
}

#menubar {
	background-color: #26ADE4;
	height: 80px;
	-moz-border-radius: 0px 0px 10px 10px;
	-webkit-border-radius: 0px 0px 10px 10px;
}

#menubar_login {
	float: right;
	padding: 10px 20px 0px 0px;
}

#menubar_login a {
	color: #000;
	padding-left: 41%;
	text-align: right;
	text-decoration: none;
}

#menubar_logo a {
	float: left;
	color: #000;
	font-size: 48px;
	font-weight: bold;
	font-family: monospace;
	padding: 15px 0px 0px 20px;
	text-decoration: none;
}

#main {
	background-color: #4DBCE9;
	border: dashed;
	float: left;
	margin: 1% 1% 1% 0%;
	padding: 0% 0% 0% 1%;
	width: 69%;
	-moz-border-radius: 10px 10px 10px 10px;
	-webkit-border-radius: 10px 10px 10px 10px;
}

#singin {
	background-color: #D1E751;
	border: dashed;
	float: right;
	width: 26%;
	margin: 1% 0% 1% 0%;
	padding: 0% 0% 0% 1%;
	-moz-border-radius: 10px 10px 10px 10px;
	-webkit-border-radius: 10px 10px 10px 10px;
}

#button_singin {
	float: right;
}

#footer {
	position: absolute;
	bottom: 0px;
	background-color: #26ADE4;
	float: left;
	height: 50px;
	margin: 1% 0% 0% 0%;
	width: 1024px;
	-moz-border-radius: 10px 10px 0px 0px;
	-webkit-border-radius: 10px 10px 0px 0px;
}

.text_box {
	display: inline;
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	border: none;
	color: #000;
	font-size: 15px;
	font-weight: bold;
	margin: 10px 10px 0px 0px;
	width: 130px;
}

.label {
	display: inline;
	text-align: right;
	float: left;
	margin: 10px 10px 0px 0px;
	width: 110px;
}

.button {
	-moz-border-radius: 3px;
	-webkit-border-radius: 3px;
	background-color: #000;
	border: none;
	color: #FFF;
	font-size: 15px;
	font-weight: bold;
	margin: 10px 10px 10px 0px;
	text-align: center;
}