<%@ page language="java" contentType="text/html; charset=UTF-8"%>
<%@ page isELIgnored="false"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Tag-It</title>
<link rel="stylesheet" type="text/css" href="/css/style.css" />
</head>
<body>
	<jsp:include page="/WEB-INF/jsp/includes/menubar.jsp" />
	<jsp:include page="/WEB-INF/jsp/includes/msg_error.jsp" />
	<jsp:include page="/WEB-INF/jsp/includes/msg_flash.jsp" />
	<div id="content">
		<h1>Minhas avaliações</h1>
		<a href="/evaluation/add/">Nova avaliação</a> </br>

			<c:forEach items="${evaluations}" var="evaluation" varStatus="st">
				<ul>
					<li>${evaluation.id} - ${evaluation.appName} - <a href="/evaluation/show/${evaluation.id}">${evaluation.name}</a>
					</li>
				</ul>
			</c:forEach>
			</br>
			Usuários
			</br>
			<c:forEach items="${users}" var="user" varStatus="st">
				<ul>
					<li>${user.id} - ${user.name} - ${user.email}</li>
				</ul>
			</c:forEach>
	</div>
	<jsp:include page="/WEB-INF/jsp/includes/footer.jsp" />
</body>
</html>
