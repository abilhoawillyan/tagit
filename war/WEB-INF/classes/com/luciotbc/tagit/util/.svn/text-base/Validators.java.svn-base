public class Validators {

	public static boolean isEmail(String email){
	    Pattern pattern = Pattern.compile("^[\\w-]+(\\.[\\w-]+)*@([\\w-]+\\.)+[a-zA-Z]{2,7}$");  
	    Matcher matcher = pattern.matcher(email);
